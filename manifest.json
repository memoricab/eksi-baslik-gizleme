{
  "name": "Eksi Baslik Gizle",
  "description": "Bu eklenti eksisozluk'de görmek istemediğiniz başlıkları gizler",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "https://eksisozluk.com/**"],
      "css": ["style.css"],
      "js": ["index.js"]
    }
  ],
  "icons": {
    "16": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ],
  "action": {
    "default_title": "Ekşi Başlık Gizle",
    "default_icon": "icon.png"
  }
}
